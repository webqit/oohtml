{
  "name": "@webqit/oohtml",
  "title": "CHTML",
  "description": "A suite of new DOM features that brings language support for modern UI development paradigms: a component-based architecture, data binding, and reactivity.",
  "keywords": [
    "namespaced-HTML",
    "html-modules",
    "ui-bindings",
    "html-imports",
    "reflex",
    "subscript",
    "scoped-js",
    "UI",
    "wicg-proposal"
  ],
  "homepage": "https://webqit.io/tooling/oohtml",
  "version": "5.0.5",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webqit/oohtml.git"
  },
  "bugs": {
    "url": "https://github.com/webqit/oohtml/issues"
  },
  "type": "module",
  "sideEffects": true,
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./lite": "./src/index.lite.js"
  },
  "scripts": {
    "test": "mocha --extension .test.js --exit",
    "build": "esbuild main=src/index.js main.lite=src/index.lite.js context-api=src/context-api/targets.browser.js bindings-api=src/bindings-api/targets.browser.js namespaced-html=src/namespaced-html/targets.browser.js html-imports=src/html-imports/targets.browser.js data-binding=src/data-binding/targets.browser.js scoped-css=src/scoped-css/targets.browser.js scoped-js=src/scoped-js/targets.browser.js --bundle --format=esm --minify --sourcemap --outdir=dist",
    "preversion": "npm run test && npm run build && git add -A dist",
    "postversion": "git push && git push --tags",
    "version:next": "npm version prerelease --preid=next"
  },
  "dependencies": {
    "@webqit/realdom": "^2.1.35",
    "@webqit/use-live": "^0.5.49",
    "@webqit/util": "^0.8.16"
  },
  "devDependencies": {
    "@webqit/oohtml-ssr": "^2.2.1",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "esbuild": "^0.14.43",
    "mocha": "^10.0.0",
    "mocha-lcov-reporter": "^1.3.0"
  },
  "author": "Oxford Harrison <oxharris.dev@gmail.com>",
  "maintainers": [
    "Oxford Harrison <oxharris.dev@gmail.com>"
  ]
}
